<%- include('blocks/topBlock', {title: 'New chat'}, logout = true) -%>

<div class="pageHeader">
    <p>Users:</p>
    <p>Create new channel</p>    
</div>

<div class="userList">    
    <% activeUserList.map(item => { %>
        <button 
            type="button"
            class="userBtn" 
            id="<%= item.userId %>" 
            style="color:#00ff41"
        >
            <%= item.username %>
        </button>
        <br>
    <% }) %> 
    <% inactiveUserList.map(item => { %>
        <button 
            type="button"
            class="userBtn" 
            id="<%= item.userId %>" 
        >
            <%= item.username %>
        </button>
        <br>
    <% }) %>   
    <br>
    <p>Channels:</p><br>
    <a href="">GENERAL</a>
</div>

<div class="channelEdit">
    <form method="post" action="/channels/new_channel">
        <label for="channelName">Channel name:</label>
        <input type="text" name="channelName" id="channelName">
        <br><br>
        <p>Included users:</p>
        <ul id="listedUsers">
            <li id="initial" data-userId="<%= id %>"> <%= user %></li>
        </ul>
        <br>
        <input type="hidden" name="store" id="store">
        <input type="submit" value=">> Create channel >>">
    </form>
</div>

<script src="/scripts/addUser.js"></script>

<script src="/socket.io/socket.io.js"></script>
<%- include('blocks/bottomBlock') -%>